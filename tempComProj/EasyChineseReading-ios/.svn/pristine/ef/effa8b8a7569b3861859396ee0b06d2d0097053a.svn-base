#import "UIVCRBottomCollectionViewCell.h"

@implementation UIVCRBottomCollectionViewCell

- (void)awakeFromNib {
    [super awakeFromNib];
    // Initialization code
    
    _lblRechargeNum.textColor = [UIColor cm_purpleColor_82056B_1];
    _lblGiveNum.textColor = [UIColor cm_blackColor_333333_1];
    
    _viewBackground.layer.borderWidth = 0.5f;
    _viewBackground.layer.borderColor = [UIColor cm_lineColor_C6C6C6_1].CGColor;
}

- (void)setIsSelected:(BOOL)isSelected
{
    CGColorRef color = isSelected ? [UIColor cm_purpleColor_82056B_1].CGColor : [UIColor cm_lineColor_C6C6C6_1].CGColor;
    _viewBackground.layer.borderColor = color;
}

@end
