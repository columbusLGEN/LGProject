#import "RegisterSuccessVC.h"

@interface RegisterSuccessVC ()

/* 成功标志 */
@property (strong, nonatomic) UIImageView *imgSuccess;
/* 主要描述 */
@property (strong, nonatomic) UILabel *lblDesc;
/* 次要描述 */
@property (strong, nonatomic) UILabel *lblSubDesc;
/* 计时器 */
@property (strong, nonatomic) NSTimer *timer;
/* 倒计时时间 */
@property (assign, nonatomic) NSInteger timeDown;

@end

@implementation RegisterSuccessVC

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    _timeDown = 3;
    [self configRegisterSuccessView];
    [self configTimer];
}

- (void)viewWillDisappear:(BOOL)animated
{
    [super viewWillDisappear:animated];
    [_timer invalidate];
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

#pragma mark -
#pragma mark 配置成功界面

- (void)configRegisterSuccessView
{
    CGFloat imgWidth = 100;
    _imgSuccess = [[UIImageView alloc] initWithFrame:CGRectMake(0, 0, imgWidth, imgWidth)];
    _imgSuccess.image = [UIImage imageNamed:@"1"];
    [self.view addSubview:_imgSuccess];
    [_imgSuccess mas_makeConstraints:^(MASConstraintMaker *make) {
        make.centerX.equalTo(self.view.mas_centerX);
        make.top.equalTo(self.view.mas_top).offset(64 + 40);
        make.size.mas_equalTo(CGSizeMake(imgWidth, imgWidth));
    }];
    
    _imgSuccess.layer.masksToBounds = YES;
    _imgSuccess.layer.cornerRadius = imgWidth/2;
    
    _lblDesc = [UILabel new];
    _lblDesc.text = @"注册成功";
    _lblDesc.font = [UIFont systemFontOfSize:14.f];
    [self.view addSubview:_lblDesc];
    [_lblDesc mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(_imgSuccess.mas_bottom).offset(20);
        make.centerX.equalTo(_imgSuccess.mas_centerX);
    }];
    
    _lblSubDesc = [UILabel new];
    _lblSubDesc.text = [NSString stringWithFormat:@"返回书城 %lds ...", _timeDown];
    _lblSubDesc.font = [UIFont systemFontOfSize:12.f];
    [self.view addSubview:_lblSubDesc];
    [_lblSubDesc mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(_lblDesc.mas_bottom).offset(20);
        make.centerX.equalTo(_lblDesc.mas_centerX);
    }];
}

#pragma mark -
#pragma mark 配置计时器

- (void)configTimer
{
    dispatch_after(dispatch_time(DISPATCH_TIME_NOW, (int64_t)(3 * NSEC_PER_SEC)), dispatch_get_main_queue(), ^{
        [self.navigationController popToRootViewControllerAnimated:YES];
    });
    _timer = [NSTimer scheduledTimerWithTimeInterval:1.0 target:self selector:@selector(timerFireMethod:) userInfo:nil repeats:YES];    
}

- (void)timerFireMethod:(NSTimer *)timer
{
    if (_timeDown > 0) {
        _timeDown -= 1;
        _lblSubDesc.text = [NSString stringWithFormat:@"返回书城 %lds ...", _timeDown];
    }
    else {
        [timer invalidate];
    }
    
}

@end
