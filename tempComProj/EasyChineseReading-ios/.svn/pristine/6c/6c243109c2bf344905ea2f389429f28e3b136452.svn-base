    _viewLine.backgroundColor = [UIColor cm_lineColor_E3E3E3_1];
    
    _btnRecharge.backgroundColor = [UIColor cm_purpleColor_82056B_1];
    _btnRecharge.layer.masksToBounds = YES;
    _btnRecharge.layer.cornerRadius = _btnRecharge.height/2;
