#pragma mark UITableViewDelegate

- (UIView *)tableView:(UITableView *)tableView viewForHeaderInSection:(NSInteger)section
{
    UIView *view = [[UIView alloc] initWithFrame:CGRectMake(0, 0, Screen_Width, kSectionHeight)];
    view.backgroundColor = [UIColor whiteColor];
    
    UIView *verLine = [[UIView alloc] initWithFrame:CGRectMake(10, 15, 3, kSectionHeight - 15 * 2)];
    verLine.backgroundColor = [UIColor cm_purpleColor_82056B_1];
    
    UIView *line = [[UIView alloc] initWithFrame:CGRectMake(0, 0, Screen_Width, .5)];
    line.backgroundColor = [UIColor cm_lineColor_C6C6C6_1];
    
    UILabel *lblType = [[UILabel alloc] initWithFrame:CGRectMake(20, 10, 200, kSectionHeight/2)];
    lblType.backgroundColor = [UIColor whiteColor];
    lblType.font = [UIFont systemFontOfSize:16.f];
    lblType.text = section == 0 ? @"成人版" : @"儿童版";
    
    [view addSubview:line];
    [view addSubview:verLine];
    [view addSubview:lblType];
    
    return view;
}

- (CGFloat)tableView:(UITableView *)tableView heightForHeaderInSection:(NSInteger)section
{
    return 40;
}

- (void)tableView:(UITableView *)tableView willDisplayCell:(UITableViewCell *)cell forRowAtIndexPath:(NSIndexPath *)indexPath
{
    UIView *line = [[UIView alloc] initWithFrame:CGRectMake(0, 0, Screen_Width, .5)];
    line.backgroundColor = [UIColor cm_lineColor_C6C6C6_1];
    [cell addSubview:line];
}

