#import "UserOrderTableViewCell.h"

@interface UserOrderTableViewCell ()
@property (strong, nonatomic) IBOutlet UILabel *lblBookName;    // 书名
@property (strong, nonatomic) IBOutlet UILabel *lblBookCost;    // 钱
@property (strong, nonatomic) IBOutlet UILabel *lblAuthor;   // 作者

@property (strong, nonatomic) IBOutlet UIView *viewBackground;  // 信息背景（为了边框）

@property (assign, nonatomic) ENUM_ZOrderState orderState;
@end

@implementation UserOrderTableViewCell

- (void)awakeFromNib {
    [super awakeFromNib];
    // Initialization code
    [self configOrderListTableViewCell];
}

- (void)setSelected:(BOOL)selected animated:(BOOL)animated {
    [super setSelected:selected animated:animated];

    // Configure the view for the selected state
}

- (void)dataDidChange
{
    OrderModel *order = self.data;
    BookModel *book = [BookModel mj_objectWithKeyValues:[order.books objectAtIndex:_index]];
    
    _lblBookName.text = book.bookName;
    _lblAuthor.text = book.author;
    _lblBookCost.text = [NSString stringWithFormat:@"￥%.02f", book.money];
}

- (void)configOrderListTableViewCell
{
    _lblBookCost.textColor = [UIColor cm_orangeColor_FF6000_1];
    _lblAuthor.textColor = [UIColor cm_blackColor_333333_1];
    _lblBookName.textColor = [UIColor cm_blackColor_333333_1];

    _viewBackground.layer.borderColor = [UIColor cm_lineColor_E3E3E3_1].CGColor;
    _viewBackground.layer.borderWidth = .5f;
}

@end
