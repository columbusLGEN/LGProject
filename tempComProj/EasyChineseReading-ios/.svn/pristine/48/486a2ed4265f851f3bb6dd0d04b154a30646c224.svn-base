static CGFloat bookMargin = 10;
static CGFloat bookSpace = 40;

#import "ECRBaseCollectionFlowLayout.h"

@implementation ECRBaseCollectionFlowLayout

- (CGSize)itemSize{
    CGSize custemSize;
    if (Screen_Width < 375) {
        custemSize = CGSizeMake((Screen_Width - 2 * bookMargin - bookSpace) / 3, 150);
    }else if(Screen_Width == 375){
        custemSize = CGSizeMake((Screen_Width - 2 * bookMargin - 2 * bookSpace) / 3, 150);
    }else{
        custemSize = CGSizeMake((Screen_Width - 2 * bookMargin - 2 * bookSpace) / 3, 180);
    }
    return custemSize;
}

@end
