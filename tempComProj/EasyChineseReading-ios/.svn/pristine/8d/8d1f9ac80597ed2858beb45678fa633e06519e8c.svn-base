#import "UFriendVC.h"

#import "UFriendDynamicTableViewCell.h"
#import "UFriendListTableViewCell.h"

#import "UFriendAddVC.h"
#import "UFriendInfoVC.h"

typedef NS_ENUM(NSUInteger, SELECT_TYPE) {
    SELECT_TYPE_DYNAMIC = 1,
    SELECT_TYPE_LIST,
};

@interface UFriendVC ()

@property (strong, nonatomic) IBOutlet UITableView *tableView;
@property (strong, nonatomic) IBOutlet UILabel *lblFriendDynamic;
@property (strong, nonatomic) IBOutlet UILabel *lblFriendList;

@property (assign, nonatomic) SELECT_TYPE selectedType;

@end

@implementation UFriendVC

- (void)viewDidLoad {
    [super viewDidLoad];
    [self configFriendView];
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

#pragma mark -
#pragma mark 配置界面

- (void)configFriendView
{
    self.title = @"我的好友";
    
    _selectedType = SELECT_TYPE_DYNAMIC;
    _lblFriendDynamic.textColor = [UIColor cm_purpleColor_82056B_1];
    _lblFriendList.textColor = [UIColor cm_blackColor_333333_1];
    
    [self configNavgitaionBar];
    [self configTableView];
    [self addTapGestureRecognizer];
}

- (void)configNavgitaionBar
{
    self.navigationItem.rightBarButtonItem = [[UIBarButtonItem alloc] initWithImage:[UIImage imageNamed:@"2"] style:UIBarButtonItemStylePlain target:self action:@selector(addFriend)];
}

- (void)addFriend
{
    [self pushToViewControllerWithStoryBoard:@"User" withStoryBoardId:NSStringFromClass([UFriendAddVC class])];
}

- (void)configTableView
{
    [self.tableView registerNib:[UINib nibWithNibName:NSStringFromClass([UFriendListTableViewCell class]) bundle:nil] forCellReuseIdentifier:NSStringFromClass([UFriendListTableViewCell class])];
    [self.tableView registerNib:[UINib nibWithNibName:NSStringFromClass([UFriendDynamicTableViewCell class]) bundle:nil] forCellReuseIdentifier:NSStringFromClass([UFriendDynamicTableViewCell class])];
    
    // tableView 自适应高度
    self.tableView.rowHeight = UITableViewAutomaticDimension;
    self.tableView.estimatedRowHeight = 100;
}

#pragma mark -
#pragma mark header 添加点击手势

- (void)addTapGestureRecognizer
{
    UITapGestureRecognizer *tapDynamic = [[UITapGestureRecognizer alloc] initWithTarget:self action:@selector(selectedDynamic)];
    [_lblFriendDynamic addGestureRecognizer:tapDynamic];
    UITapGestureRecognizer *tapList = [[UITapGestureRecognizer alloc] initWithTarget:self action:@selector(selectedList)];
    [_lblFriendList addGestureRecognizer:tapList];
}

- (void)selectedDynamic
{
    _selectedType = SELECT_TYPE_DYNAMIC;
    _lblFriendDynamic.textColor = [UIColor cm_purpleColor_82056B_1];
    _lblFriendList.textColor = [UIColor cm_blackColor_333333_1];
    [self.tableView reloadData];
}

- (void)selectedList
{
    _lblFriendList.textColor = [UIColor cm_purpleColor_82056B_1];
    _lblFriendDynamic.textColor = [UIColor cm_blackColor_333333_1];
    
    _selectedType = SELECT_TYPE_LIST;
    [self.tableView reloadData];
}

#pragma mark -
#pragma mark UITableViewDataSource

- (NSInteger)numberOfSectionsInTableView:(UITableView *)tableView
{
    return 1;
}

- (NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    return 10;
}

- (UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath
{
    if (_selectedType == SELECT_TYPE_DYNAMIC) {
        UFriendDynamicTableViewCell *cell = [tableView dequeueReusableCellWithIdentifier:NSStringFromClass([UFriendDynamicTableViewCell class])];
        return cell;
    }
    else {
        UFriendListTableViewCell *cell = [tableView dequeueReusableCellWithIdentifier:NSStringFromClass([UFriendListTableViewCell class])];
        return cell;
    }
}

#pragma mark -
#pragma mark UITableViewDelegate

- (void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath
{
    [tableView deselectRowAtIndexPath:indexPath animated:YES];
    if (_selectedType == SELECT_TYPE_LIST) {
        UFriendInfoVC *info = [UFriendInfoVC loadFromStoryBoard:@"User"];
        
        [self.navigationController pushViewController:info animated:YES];
    }
}

@end
