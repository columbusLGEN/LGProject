    [self.view addSubview:_segment];
    
    WeakSelf(self)
    _segment.selectedLeft = ^{
        weakself.recommendType = ENUM_RecommendTypeRecommend;
        [weakself.tableView reloadData];
    };
    _segment.selectedRight = ^{
        weakself.recommendType = ENUM_RecommendTypeImpower;
        [weakself.tableView reloadData];
    };
}

