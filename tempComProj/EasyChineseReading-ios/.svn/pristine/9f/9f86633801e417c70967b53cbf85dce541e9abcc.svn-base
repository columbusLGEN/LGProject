#pragma mark - 获取学生列表接口

/**
 获取学生列表
 
 @param classId    班级id
 @param completion 回调
 */
- (void)getStudentsWithClassId:(NSString *)classId
                    completion:(CompleteBlock)completion;

/**
 获取单个学生信息
 
 @param studentId  学生id
 @param completion 回调
 */
- (void)getStudentInfoWithStudentId:(NSString *)studentId
                         completion:(CompleteBlock)completion;

#pragma mark - 学生管理接口

/**
 学生管理接口

 @param classId     班级id
 @param name        学生姓名
 @param age         年龄
 @param user        账号（手机号或邮箱）
 @param password    密码
 @param sex         性别
 @param type        类别(1 新增 2 修改 3 删除)
 @param completion  回调
 */
- (void)addStudentInfoWithClassId:(NSString *)classId
                             name:(NSString *)name
                              age:(NSString *)age
                             user:(NSString *)user
                         password:(NSString *)password
                              sex:(NSString *)sex
                             type:(NSString *)type
                       completion:(CompleteBlock)completion;


