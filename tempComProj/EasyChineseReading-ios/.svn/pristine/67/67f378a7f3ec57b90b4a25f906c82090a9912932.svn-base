#import "UClassManagerTableViewCell.h"

@interface UClassManagerTableViewCell ()

@property (weak, nonatomic) IBOutlet UILabel *lblClassName;
@property (weak, nonatomic) IBOutlet UILabel *lblStudentNum;
@property (weak, nonatomic) IBOutlet UIButton *btnUpdate;
@property (weak, nonatomic) IBOutlet UIButton *btnDelete;

@property (assign, nonatomic) NSInteger classId; // 班级 id

@end

@implementation UClassManagerTableViewCell

- (void)awakeFromNib {
    [super awakeFromNib];
    [self configCell];
}

- (void)setSelected:(BOOL)selected animated:(BOOL)animated {
    [super setSelected:selected animated:animated];

    // Configure the view for the selected state
}

#pragma mark - 配置界面

- (void)configCell
{
    _lblClassName.textColor = [UIColor cm_blackColor_333333_1];
    _lblStudentNum.textColor = [UIColor cm_blackColor_333333_1];

    _lblClassName.font = [UIFont systemFontOfSize:16.f];
    _lblStudentNum.font = [UIFont systemFontOfSize:16.f];

    [_btnUpdate setTintColor:[UIColor cm_blackColor_333333_1]];
    [_btnDelete setTintColor:[UIColor cm_blackColor_333333_1]];

    [_btnUpdate setImage:[UIImage imageNamed:@"ban8"] forState:UIControlStateNormal];
    [_btnDelete setImage:[UIImage imageNamed:@"ban1"] forState:UIControlStateNormal];
}

#pragma mark - 数据

- (void)dataDidChange
{
    NSDictionary *dic = self.data;

    _lblClassName.text = dic[@"name"];
    _lblStudentNum.text = dic[@"number"];
    
//    ClassModel *class = self.data;
//    _classId = class.classId;
}

#pragma mark - 操作

- (IBAction)click_btnUpdate:(id)sender {
    [self.delegate updateClassWithClassId:_classId];
}

- (IBAction)click_btnDelete:(id)sender {
    [self.delegate deleteClassWithClassId:_classId];
}

@end
