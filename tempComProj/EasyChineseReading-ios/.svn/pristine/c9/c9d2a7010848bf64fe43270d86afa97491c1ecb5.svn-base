- (void)configView
{
    [self configNavigationBar];
    [self configTableView];
}

- (void)configNavigationBar
{
    self.title = @"创建学生";
    self.navigationItem.rightBarButtonItem = [[UIBarButtonItem alloc] initWithTitle:@"保存" style:UIBarButtonItemStylePlain target:self action:@selector(saveStudentInfo)];
}

- (void)configTableView
{
    _lblDescClass.textColor = _lblDescName.textColor = _lblDescSex.textColor = _lblDescAge.textColor = _lblDescAccount.textColor = _lblDescPassword.textColor = _lblDescRePassword.textColor = [UIColor cm_blackColor_333333_1];
    _lblClass.textColor = _lblSex.textColor = [UIColor cm_blackColor_333333_1];
    
    _lblDescClass.font = _lblDescName.font = _lblDescSex.font = _lblDescAge.font = _lblDescAccount.font = _lblDescPassword.font = _lblDescRePassword.font = [UIFont systemFontOfSize:15.f];
    _lblClass.font = _lblSex.font = [UIFont systemFontOfSize:15.f];
    
    _txtfName.textColor = _txtfAge.textColor = _txtfAccount.textColor = _txtfPassword.textColor = _txtfRePassword.textColor = [UIColor cm_blackColor_333333_1];
}

- (void)saveStudentInfo
{
    [self.navigationController popViewControllerAnimated:YES];
}


