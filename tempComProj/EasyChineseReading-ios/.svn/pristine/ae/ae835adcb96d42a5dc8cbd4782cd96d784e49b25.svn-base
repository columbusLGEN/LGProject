//@property (copy,nonatomic) NSString *localURL;// 本地存储路径

// 未下载
// 开始下载
// 下载中
// 下载完成
@property (assign,nonatomic) ECRDownloadStateModelState modelState;

// 下载进度

// imgView --> 根据状态返回
