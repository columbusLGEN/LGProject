#import "UserTicketManager.h"

#import "UTickManagerTableViewCell.h"

#import "UserTicketVC.h"
#import "UserTicketListVC.h"
#import "UserTicketCenterVC.h"

@interface UserTicketManager ()<UITableViewDelegate, UITableViewDataSource>

@property (nonatomic, strong) UITableView *tableView;   // 列表

@property (strong, nonatomic) UILabel *lblTickerCenter; // 卡券中心
@property (strong, nonatomic) UIView *viewBottom;       // 底部view
@end

@implementation UserTicketManager

- (void)viewDidLoad {
    [super viewDidLoad];
    [self configTableView];
    [self configTicketView];
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

- (void)updateSystemLanguage
{
    _lblTickerCenter.text = LOCALIZATION(@"领券中心");
    [_tableView reloadData];
}

#pragma mark - 配置界面

- (void)configTicketView
{
    _viewBottom = [[UIView alloc] initWithFrame:CGRectMake(0, Screen_Height - 2 * cHeaderHeight_44 - cHeaderHeight_64, Screen_Width, cHeaderHeight_44)];
    _viewBottom.backgroundColor = [UIColor whiteColor];
    [self.view addSubview:_viewBottom];
    
    UIView *line = [[UIView alloc] initWithFrame:CGRectMake(0, 0, _viewBottom.width, 1)];
    line.backgroundColor = [UIColor cm_lineColor_D9D7D7_1];
    [_viewBottom addSubview:line];
    
    _lblTickerCenter = [[UILabel alloc] initWithFrame:CGRectMake(0, 1, Screen_Width, cHeaderHeight_44 - 1)];
    _lblTickerCenter.text = LOCALIZATION(@"领券中心");
    _lblTickerCenter.textAlignment = NSTextAlignmentCenter;
    _lblTickerCenter.font = [UIFont systemFontOfSize:cFontSize_16];
    _lblTickerCenter.textColor = [UIColor cm_blackColor_333333_1];
    _lblTickerCenter.userInteractionEnabled = YES;
    UITapGestureRecognizer *tapTicketCenter = [[UITapGestureRecognizer alloc] initWithTarget:self action:@selector(toTicketCenterVC)];
    [_lblTickerCenter addGestureRecognizer:tapTicketCenter];
    [_viewBottom addSubview:_lblTickerCenter];
}

- (void)configTableView
{
    _tableView = [[UITableView alloc] initWithFrame:CGRectMake(0, 0, Screen_Width, self.view.height) style:UITableViewStylePlain];
    
    _tableView.delegate = self;
    _tableView.dataSource = self;
    
    _tableView.estimatedRowHeight = 100;
    _tableView.rowHeight = UITableViewAutomaticDimension;
    _tableView.separatorStyle = UITableViewCellSeparatorStyleNone;
    
    [self.view addSubview:_tableView];
    
    [_tableView registerNib:[UINib nibWithNibName:NSStringFromClass([UTickManagerTableViewCell class]) bundle:nil]
     forCellReuseIdentifier:NSStringFromClass([UTickManagerTableViewCell class])];
}

#pragma mark - 点击卡券中心

- (void)toTicketCenterVC
{
    UserTicketCenterVC *ticketCenter = [UserTicketCenterVC new];
    [self.navigationController pushViewController:ticketCenter animated:YES];
}

#pragma mark - UITableViewDataSource

- (NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    return 2;
}

- (UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath
{
    UTickManagerTableViewCell *cell = [tableView dequeueReusableCellWithIdentifier:NSStringFromClass([UTickManagerTableViewCell class])];
    
    if (0 == indexPath.row) {
        cell.imgIcon.image = [UIImage imageNamed:@"icon_ticket_card_voucher"];
        cell.lblTitle.text = LOCALIZATION(@"卡券兑换");
    }
    else {
        cell.imgIcon.image = [UIImage imageNamed:@"icon_ticket_my_ticket"];
        cell.lblTitle.text = LOCALIZATION(@"我的卡券");
    }
    
    return cell;
}

#pragma mark - UITableViewDelegate

- (void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath
{
    if (0 == indexPath.row) {
        UserTicketVC *tickVC = [UserTicketVC new];
        [self.navigationController pushViewController:tickVC animated:YES];
    }
    else {
        UserTicketListVC *tickListVC = [UserTicketListVC new];
        [self.navigationController pushViewController:tickListVC animated:YES];
    }
}

- (UIView *)tableView:(UITableView *)tableView viewForFooterInSection:(NSInteger)section
{
    UIView *footer = [UIView new];
    footer.backgroundColor = [UIColor whiteColor];
    return footer;
}

@end
