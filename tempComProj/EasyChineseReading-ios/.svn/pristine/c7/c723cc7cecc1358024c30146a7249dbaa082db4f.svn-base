#import "ECRBiRecoCollectionViewCell.h"
#import "ECRBookInfoModel.h"

@interface ECRBiRecoCollectionViewCell ()
@property (weak, nonatomic) IBOutlet UIImageView *bookImg;
@property (weak, nonatomic) IBOutlet UILabel *bName;
@property (weak, nonatomic) IBOutlet UILabel *bPrice;


@end

@implementation ECRBiRecoCollectionViewCell

- (void)setModel:(ECRBookInfoModel *)model{
    _model = model;
    [_bookImg sd_setImageWithURL:[NSURL URLWithString:model.cover] placeholderImage:nil];
    _bName.text = model.bookName;
    _bPrice.text = [NSString stringWithFormat:@"￥%.2f",model.price];
//    NSLog(@"---: %ld",[model.bookName length]);
//    if ([model.bookName length] > 3) {
//        _bName.textAlignment = NSTextAlignmentLeft;
//    }else{
//        _bName.textAlignment = NSTextAlignmentCenter;
//    }
}

- (void)awakeFromNib{
    [super awakeFromNib];
    _bookImg.clipsToBounds = YES;
    

}

@end
