#import "ECRHomeBRCell.h"
#import "ECRHomeBook.h"

@interface ECRHomeBRCell ()
@property (weak, nonatomic) IBOutlet UIImageView *icon;
@property (weak, nonatomic) IBOutlet UILabel *bName;
@property (weak, nonatomic) IBOutlet UILabel *price;
@property (weak, nonatomic) IBOutlet UILabel *priceNum;


@end

@implementation ECRHomeBRCell

- (void)textDependsLauguage{
    if ([LGPChangeLanguage currentLanguageIsEnglish]) {
        _bName.text = [NSString stringWithFormat:@"%@\n",_model.en_bookName];
    }else{
        _bName.text = [NSString stringWithFormat:@"%@\n",_model.bookName];
    }
}

- (void)setModel:(ECRHomeBook *)model{
    _model = model;
    // 名字长度大于 4 左对齐
//    NSLog(@"%@ -- %ld",model.name,[model.name length]);
//    if ([model.bookName length] > 4) {
//        _bName.textAlignment = NSTextAlignmentLeft;
//    }else{
//        _bName.textAlignment = NSTextAlignmentCenter;
//    }
    [self textDependsLauguage];
    _priceNum.text = [NSString stringWithFormat:@"%.2f",model.price];
    [_icon sd_setImageWithURL:[NSURL URLWithString:model.iconUrl] placeholderImage:LGPlaceHolderImg];
//    NSLog(@"_icon.image --bname:%@ --img: %@ -- imgSize: %@",model.bookName,_icon.image,model.iconUrl);
}

- (void)awakeFromNib{
    [super awakeFromNib];
    
}

@end
