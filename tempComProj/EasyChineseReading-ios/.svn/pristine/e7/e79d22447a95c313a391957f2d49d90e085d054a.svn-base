#import "LButtonTableViewCell.h"

@interface LButtonTableViewCell ()

@property (strong, nonatomic) IBOutlet UIButton *btnLogin;
@property (strong, nonatomic) IBOutlet UILabel *lblDescRemberPassword;

@end

@implementation LButtonTableViewCell

- (void)awakeFromNib {
    [super awakeFromNib];
    // Initialization code
    
    _btnLogin.layer.masksToBounds = YES;
    _btnLogin.layer.cornerRadius = _btnLogin.height/2;
    
    _btnLogin.backgroundColor = [UIColor cm_purpleColor_82056B_1];
    [_btnLogin setTitleColor:[UIColor whiteColor] forState:UIControlStateNormal];
    
    UITapGestureRecognizer *tapRememberGesture = [[UITapGestureRecognizer alloc] initWithTarget:self action:@selector(tapRememberPassword)];
    [_lblDescRemberPassword addGestureRecognizer:tapRememberGesture];
    [_imgRemberPassword addGestureRecognizer:tapRememberGesture];
}

- (void)updateSystemLanguage
{
    [_btnLogin setTitle:LOCALIZATION(@"立即登录") forState:UIControlStateNormal];
    _lblDescRemberPassword.text = LOCALIZATION(@"记住密码");
}

- (void)setSelected:(BOOL)selected animated:(BOOL)animated {
    [super setSelected:selected animated:animated];
}

- (void)dataDidChange
{
    NSDictionary *dic = self.data;
    
    _imgRemberPassword.image = [UIImage imageNamed:[NSString stringWithFormat:@"%@", dic[@"remember"] ? cImageUnSelected : cImageSelected]];
}
- (IBAction)click_btnLogin:(id)sender {
    if ([self.delegate respondsToSelector:@selector(login)]) {
        [self.delegate login];
    }
}

- (void)tapRememberPassword
{
    if ([self.delegate respondsToSelector:@selector(rememberPassword)]) {
        [self.delegate rememberPassword];
    }
}

@end
