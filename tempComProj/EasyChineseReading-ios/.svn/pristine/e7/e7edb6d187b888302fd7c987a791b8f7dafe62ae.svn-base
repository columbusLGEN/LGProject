#import "UFriendInfoHeaderView.h"

@interface UFriendInfoHeaderView ()

@property (strong, nonatomic) IBOutlet UIImageView *imgAvatar;      // 头像

@property (strong, nonatomic) IBOutlet UIView *viewTopLine;
@property (strong, nonatomic) IBOutlet UIView *viewMidLine;
@property (strong, nonatomic) IBOutlet UIView *viewBottom;
@property (strong, nonatomic) IBOutlet UIView *viewVerLine;
@property (strong, nonatomic) IBOutlet UIView *viewBackground;

@property (strong, nonatomic) IBOutlet UILabel *lblName;            // 用户名

@property (strong, nonatomic) IBOutlet UILabel *lblDesWords;        // 描述 阅读总字数
@property (strong, nonatomic) IBOutlet UILabel *lblDesDays;         // 描述 阅读总天数
@property (strong, nonatomic) IBOutlet UILabel *lblDesAveWords;     // 描述 阅读平均字数
@property (strong, nonatomic) IBOutlet UILabel *lblDesBooks;        // 描述 已完成阅读

@property (strong, nonatomic) IBOutlet UILabel *lblWords;       // 阅读总字数
@property (strong, nonatomic) IBOutlet UILabel *lblDays;        // 阅读总天数
@property (strong, nonatomic) IBOutlet UILabel *lblAveWords;    // 阅读平均字数
@property (strong, nonatomic) IBOutlet UILabel *lblBooks;       // 已完成阅读

@end

@implementation UFriendInfoHeaderView

- (void)awakeFromNib
{
    [super awakeFromNib];
    [self configHeaderView];
}

- (void)configHeaderView
{
    _imgAvatar.layer.masksToBounds = YES;
    _imgAvatar.layer.cornerRadius = _imgAvatar.height/2;
    
    _imgAvatar.layer.borderColor = [UIColor whiteColor].CGColor;
    _imgAvatar.layer.borderWidth = 3.f;
    
    _imgAvatar.layer.shadowColor = [UIColor cm_blackColor_333333_1].CGColor;
    _imgAvatar.layer.shadowOffset = CGSizeMake(0, 1);
    
    _lblName.textColor = [UIColor cm_blackColor_333333_1];
    
    _lblDesDays.textColor = [UIColor cm_blackColor_333333_1];
    _lblDesBooks.textColor = [UIColor cm_blackColor_333333_1];
    _lblDesWords.textColor = [UIColor cm_blackColor_333333_1];
    _lblDesAveWords.textColor = [UIColor cm_blackColor_333333_1];
    
    _lblWords.textColor = [UIColor cm_purpleColor_82056B_1];
    _lblDays.textColor = [UIColor cm_purpleColor_82056B_1];
    _lblBooks.textColor = [UIColor cm_purpleColor_82056B_1];
    _lblAveWords.textColor = [UIColor cm_purpleColor_82056B_1];
    
    [self configHeaderLineColor:[UIColor cm_lineColor_E3E3E3_1]];
}
- (void)configHeaderLineColor:(UIColor *)lineColor
{
    _viewBackground.layer.borderWidth = 1.f;
    _viewBackground.layer.borderColor = lineColor.CGColor;
    
    _viewTopLine.backgroundColor = lineColor;
    _viewMidLine.backgroundColor = lineColor;
    _viewBottom.backgroundColor = lineColor;
}

- (void)dataDidChange
{
    
}

@end
