    _txtfAge.placeholder        = LOCALIZATION(@"请输入教师年龄");
    _txtfPassword.placeholder   = [NSString stringWithFormat:@"%@(%@)", LOCALIZATION(@"输入密码"), LOCALIZATION(@"密码为8-16个字符，可由英文、数字组成")];
