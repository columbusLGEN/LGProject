typedef NS_ENUM(NSUInteger, ECRBookModelDownloadState) {
    ECRBookModelDownloadStateNormal,
    ECRBookModelDownloadStateDownloading,   // 下载中
    ECRBookModelDownloadStatePause,         // 暂停
    ECRBookModelDownloadStateDone           // 下载完成
};

#import "ECRBookListModel.h"
@class ECRDownloadStateModel;

@interface ECRBookrackModel : ECRBookListModel

@property (strong,nonatomic) ECRDownloadStateModel *dsModel;// 下载状态模型

/**
 0:未拥有
 1:购买
 2:租赁
 3:授权
 4:阅读卡
 */
@property (assign,nonatomic) NSInteger owendType;

@property (assign,nonatomic) NSInteger id;//
@property (assign,nonatomic) NSInteger bookType;// 1=DB; 2=epub; 3=pdf
@property (strong,nonatomic) NSMutableArray<ECRBookrackModel *> *books;// 书籍数组
@property (copy,nonatomic)   NSString *groupName;// 书架分组名称
@property (copy,nonatomic)   NSString *name;// 书籍名称
@property (assign,nonatomic) NSInteger groupId;// 书架分组id


@property (assign,nonatomic) BOOL isEditState;//1 = 编辑状态，0 = 常规状态
//@property (assign,nonatomic) BOOL isSelected;//1 = 选中状态，0 = 常规状态
@property (copy,nonatomic)   NSString *bookPic;// 书籍封面
@property (assign,nonatomic) NSInteger bookParent;// 书籍所属分组
@property (assign,nonatomic) NSInteger progress;// 阅读进度
@property (assign,nonatomic) NSInteger downloadState;
@property (assign,nonatomic) NSInteger localGroupId;// 本地文件夹id -> 本地数据库文件夹主键id
- (void)addBooksWithFromModel:(ECRBookrackModel *)fromModel;

@end
