#import "UCRBooksShopCarView.h"

@interface UCRBooksShopCarView ()

@property (nonatomic, strong) UCRecommendMaskingView *maskingView;       //蒙版

@property (nonatomic, strong) UILabel *lblBookSelectedNumber;           // 选中图书的数量

@property (nonatomic, strong) UILabel *line;             // 分割线
@property (nonatomic, strong) UIView *parentView;        // 背景图层

@property (nonatomic, assign) NSInteger selectedNumber;  // 选中图书的数量

@property (nonatomic, assign) BOOL open;                 // 选中的图书列表的点开状态

@property (nonatomic, assign) CGFloat maxHeight;         // 选中图书列表的最高高度

@end

@implementation UCRBooksShopCarView

#pragma mark - 初始化

- (instancetype)initWithFrame:(CGRect)frame inView:(UIView *)parentView
{
    self = [super initWithFrame:frame];
    if (self) {
        self.parentView = parentView;
        [self configBooksShopCarView];
    }
    return self;
}

#pragma mark - 配置图书购物车界面

- (void)configBooksShopCarView
{
    self.backgroundColor = [UIColor cm_lineColor_E3E3E3_1];
    self.line = [[UILabel alloc] initWithFrame:CGRectMake(0, 0, Screen_Width, 0.5f)];
    self.line.layer.borderColor = [UIColor lightGrayColor].CGColor;
    self.line.layer.borderWidth = .5f;
    [self addSubview:self.line];
    
    //选中图书的数量
    self.lblBookSelectedNumber = [[UILabel alloc] initWithFrame:CGRectMake(70, 10, self.bounds.size.width-140, 30)];
    [self.lblBookSelectedNumber setTextColor:[UIColor grayColor]];
    [self.lblBookSelectedNumber setText:@"还没有选择图书~"];
    [self.lblBookSelectedNumber setFont:[UIFont systemFontOfSize:13.0]];
    [self addSubview:self.lblBookSelectedNumber];
    
    //去推荐 选择学生
    self.btnNextSelectedStudents = [UIButton buttonWithType:UIButtonTypeCustom];
    self.btnNextSelectedStudents.frame = CGRectMake(self.bounds.size.width - 100, 5, 90, 40);
    self.btnNextSelectedStudents.layer.cornerRadius = _btnNextSelectedStudents.height/2;
    self.btnNextSelectedStudents.titleLabel.font = [UIFont boldSystemFontOfSize:14];
    self.btnNextSelectedStudents.backgroundColor = [UIColor lightGrayColor];
    self.btnNextSelectedStudents.enabled = NO;
    [self.btnNextSelectedStudents setTitle:[NSString stringWithFormat:@"去推荐"] forState:UIControlStateNormal];
    [self.btnNextSelectedStudents addTarget:self action:@selector(clickToNextView:) forControlEvents:UIControlEventTouchUpInside];
    [self addSubview:self.btnNextSelectedStudents];
    
    //查看选中的书
    self.btnShowSelectedBooks = [UIButton buttonWithType:UIButtonTypeCustom];
    self.btnShowSelectedBooks.frame = CGRectMake(10, -10, 50,50);
    [self.btnShowSelectedBooks setUserInteractionEnabled:NO];
    [self.btnShowSelectedBooks setBackgroundImage:[UIImage imageNamed:@"1"] forState:UIControlStateNormal];
    [self.btnShowSelectedBooks addTarget:self action:@selector(showSelectedBooks:) forControlEvents:UIControlEventTouchUpInside];
    [self addSubview:self.btnShowSelectedBooks];

    // 蒙版
    self.maskingView = [[UCRecommendMaskingView alloc] initWithFrame:CGRectMake(0, 0, Screen_Width, Screen_Height-50)];
    self.maskingView.shoppingCarView = self;
    [self.maskingView addSubview:self];
    [self.parentView addSubview:self.maskingView];
    self.maskingView.alpha = 0.0;
    
    _maxHeight = Screen_Height / 2 * 3;
    //选中的图书列表
    self.bookSelectedView = [[UCRBooksSelectedView alloc] initWithFrame:CGRectMake(0,self.parentView.bounds.size.height - _maxHeight, self.bounds.size.width, _maxHeight) withObjects:nil  canReorder:YES];
    [self.maskingView addSubview:_bookSelectedView];
    
    // 图书列表的展示状态
    self.open = NO;
}

#pragma mark 选择推荐的学生

- (void)clickToNextView:(id)sender {
    
    if ([self.delegate respondsToSelector:@selector(nextStep)]) {
        [self.delegate nextStep];
    }
    NSLog(@"%@", _bookSelectedView.objects);
}

#pragma mark 展示选中的图书

- (void)showSelectedBooks:(id)sender {
    // 如果没有图书 则返回
    if (!(_selectedNumber > 0)) {
        [self.btnShowSelectedBooks setUserInteractionEnabled:NO];
        return;
    }
    
    if (self.open) {
        [self dismissWithAnimated:YES];
    }
    else {
        [self showWithAnimated:YES];
    }
}

#pragma mark 更新 bookSelectedView 的高度

- (void)updateFrame:(UCRBooksSelectedView *)bookSelectedView
{
    // 选中图书的数量为0则消失
    if(bookSelectedView.objects.count ==0){
        [self dismissWithAnimated:YES];
        return;
    }
    
    float height = [bookSelectedView.objects count] * 50;
    
    if (height >= _maxHeight) {
        height = _maxHeight;
    }
    
    _bookSelectedView.frame = CGRectMake(_bookSelectedView.frame.origin.x, self.parentView.bounds.size.height - height - 50, _bookSelectedView.frame.size.width, height);
}

#pragma mark - show and dismiss

- (void)showWithAnimated:(BOOL)animated
{
    [UIView animateWithDuration:cAnimationTime animations:^{
        _maskingView.alpha = 1.0;
        [self updateFrame:_bookSelectedView];
    } completion:^(BOOL finished) {
        self.open = YES;
    }];
}

- (void)dismissWithAnimated:(BOOL)animated
{
//    [self.btnShowSelectedBooks bringSubviewToFront:_maskingView];
    [UIView animateWithDuration:cAnimationTime animations:^{
        self.btnShowSelectedBooks.frame = CGRectMake(10, -10, 50, 50);
        self.lblBookSelectedNumber.frame = CGRectMake(70, 10, self.width, 30);
        _bookSelectedView.frame = CGRectMake(_bookSelectedView.x, self.parentView.height, _bookSelectedView.width, _bookSelectedView.height);
        _maskingView.alpha = 0.0;
    } completion:^(BOOL finished) {
        self.open = NO;
    }];
}

#pragma  mark - 计算选中图书的数量

- (void)setSelectedBooksNumber:(NSInteger)number
{
    _selectedNumber = number;
    NSNumberFormatter *formatter = [[NSNumberFormatter alloc] init];
    
    formatter.numberStyle = kCFNumberFormatterDecimalStyle;
    
    NSString *amount = [formatter stringFromNumber:[NSNumber numberWithInteger:_selectedNumber]];
    if(_selectedNumber > 0)
    {
        self.lblBookSelectedNumber.font = [UIFont systemFontOfSize:20.0f];
        self.lblBookSelectedNumber.textColor = [UIColor redColor];
        self.lblBookSelectedNumber.text = [NSString stringWithFormat:@"共%@本书",amount];
        
        self.btnNextSelectedStudents.enabled = YES;
        [self.btnNextSelectedStudents setTitle:@"去推荐" forState:UIControlStateNormal];
        [self.btnNextSelectedStudents setBackgroundColor:[UIColor redColor]];
        [self.btnShowSelectedBooks setUserInteractionEnabled:YES];
    }
    else
    {
        [self.lblBookSelectedNumber setTextColor:[UIColor grayColor]];
        [self.lblBookSelectedNumber setText:@"还没有选择图书~"];
        [self.lblBookSelectedNumber setFont:[UIFont systemFontOfSize:13.0]];
        
        self.btnNextSelectedStudents.enabled = NO;
        [self.btnNextSelectedStudents setTitle:[NSString stringWithFormat:@"去推荐"] forState:UIControlStateNormal];
        [self.btnNextSelectedStudents setBackgroundColor:[UIColor grayColor]];
        
        [self.btnShowSelectedBooks setUserInteractionEnabled:NO];
    }
}

@end
