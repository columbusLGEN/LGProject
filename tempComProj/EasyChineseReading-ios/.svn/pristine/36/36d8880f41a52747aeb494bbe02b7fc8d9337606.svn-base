#import "UCManagerAddVC.h"

@interface UCManagerAddVC ()<UITextFieldDelegate>

@property (strong, nonatomic) IBOutlet UILabel *lblDescSchoolName;
@property (strong, nonatomic) IBOutlet UILabel *lblDescSchoolAddress;
@property (strong, nonatomic) IBOutlet UILabel *lblDescClassName;
@property (strong, nonatomic) IBOutlet UILabel *lblDescClassNumber;
@property (strong, nonatomic) IBOutlet UILabel *lblDescClassDescribe;

@property (strong, nonatomic) IBOutlet UITextField *txtfSchoolName;
@property (strong, nonatomic) IBOutlet UITextField *txtfSchoolAddress;
@property (strong, nonatomic) IBOutlet UITextField *txtfClassName;
@property (strong, nonatomic) IBOutlet UITextField *txtClassNumber;
@property (strong, nonatomic) IBOutlet UITextField *txtClassDescribe;

@end

@implementation UCManagerAddVC

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    [self configAddView];
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

- (void)configAddView
{
    self.title = @"创建班级";
    
    _lblDescSchoolName.textColor = [UIColor cm_blackColor_333333_1];
    _lblDescSchoolAddress.textColor = [UIColor cm_blackColor_333333_1];
    _lblDescClassName.textColor = [UIColor cm_blackColor_333333_1];
    _lblDescClassNumber.textColor = [UIColor cm_blackColor_333333_1];
    _lblDescClassDescribe.textColor = [UIColor cm_blackColor_333333_1];
    
    UIColor *color = _classType == 1 ? [UIColor cm_graryColor_807F7F_1] : [UIColor cm_blackColor_333333_1];
    _txtfSchoolName.textColor = color;
    _txtfSchoolAddress.textColor = color;
    _txtfClassName.textColor = color;
    _txtClassNumber.textColor = color;
    _txtClassDescribe.textColor = color;
    
    if (_classType == 0) {
        [self configNavigationItem];
    }
}

- (void)configNavigationItem
{
    self.navigationItem.rightBarButtonItem = [[UIBarButtonItem alloc] initWithTitle:@"保存" style:UIBarButtonItemStylePlain target:self action:@selector(save)];
}

- (void)save
{
    
}

- (BOOL)textFieldShouldBeginEditing:(UITextField *)textField
{
    if (_classType == 1) {
        return NO;
    }
    return YES;
}

@end
