#import "UOrderDetailVC.h"

#import "UOrderTableViewCell.h"
#import "ZStarView.h"
#import "UOrderFooterView.h"

@interface UOrderDetailVC ()<UITableViewDelegate, UITableViewDataSource, ZStarViewDelegate>

@property (strong, nonatomic) UITableView *tableView;
@property (assign, nonatomic) NSInteger score; // 评价

@end

@implementation UOrderDetailVC

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    [self configOrderDetailView];
    [self configNavigation];
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

- (void)configOrderDetailView
{
    self.title = @"图书评价";
    
    UIView *headerView = [UIView new];
    headerView.backgroundColor = [UIColor whiteColor];
    [self.view addSubview:headerView];
    [headerView mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(self.view).offset(64);
        make.left.equalTo(self.view);
        make.right.equalTo(self.view);
        make.height.equalTo(@100);
    }];
    
    UIView *verLine = [UIView new];
    verLine.backgroundColor = [UIColor cm_purpleColor_82056B_1];
    [headerView addSubview:verLine];
    
    [verLine mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(headerView.mas_top).offset(15);
        make.left.equalTo(headerView.mas_left).offset(10);
        make.size.mas_equalTo(CGSizeMake(3, 15));
    }];
    
    UILabel *lblDesc = [UILabel new];
    lblDesc.font = [UIFont systemFontOfSize:15.f];
    lblDesc.text = @"商品评分";
    lblDesc.textColor = [UIColor cm_blackColor_333333_1];
    [headerView addSubview:lblDesc];
    [lblDesc mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(verLine.mas_right).offset(10);
        make.centerY.equalTo(verLine.mas_centerY);
    }];
    
    ZStarView *starView = [[ZStarView alloc] initWithFrame:CGRectMake(25, 40, 175, 35) numberOfStar:5];
    starView.canChange = YES;
    starView.delegate = self;
    [headerView addSubview:starView];
    _score = 2;
    [starView setScore:_score withAnimation:NO];
    
    UIView *bottomlineView = [UIView new];
    bottomlineView.backgroundColor = [UIColor cm_lineColor_C6C6C6_1];
    [headerView addSubview:bottomlineView];
    [bottomlineView mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(headerView.mas_left);
        make.right.equalTo(headerView.mas_right);
        make.bottom.equalTo(headerView.mas_bottom);
        make.height.equalTo(@.5);
    }];
    
    _tableView = [[UITableView alloc] init];
    [_tableView registerNib:[UINib nibWithNibName:NSStringFromClass([UOrderTableViewCell class]) bundle:nil] forCellReuseIdentifier:NSStringFromClass([UOrderTableViewCell class])];
    _tableView.delegate = self;
    _tableView.dataSource = self;
    _tableView.showsVerticalScrollIndicator = NO;
    _tableView.separatorStyle = UITableViewCellSeparatorStyleNone;
    
    // 自适应高度
    _tableView.rowHeight = UITableViewAutomaticDimension;
    _tableView.estimatedRowHeight = 100;
    [self.view addSubview:_tableView];
    [_tableView mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(headerView.mas_bottom);
        make.left.equalTo(self.view.mas_left);
        make.bottom.equalTo(self.view.mas_bottom).offset(100);
        make.right.equalTo(self.view.mas_right);
    }];
}

- (void)configNavigation
{
    UIButton *btnDone = [[UIButton alloc] initWithFrame:CGRectMake(0, 0, 50, 30)];
    [btnDone setTitle:@"完成" forState:UIControlStateNormal];
    [btnDone setTitleColor:[UIColor cm_blackColor_333333_1] forState:UIControlStateNormal];
    [btnDone setTitleColor:[UIColor cm_purpleColor_82056B_1] forState:UIControlStateHighlighted];
    [btnDone setBackgroundColor:[UIColor clearColor]];
    [btnDone addTarget:self action:@selector(saveEvalute) forControlEvents:UIControlEventTouchUpInside];
    self.navigationItem.rightBarButtonItem = [[UIBarButtonItem alloc] initWithCustomView:btnDone];
    self.navigationItem.rightBarButtonItem.enabled = NO;
}

#pragma mark -
#pragma mark UITableViewDataSource

- (NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    return _order.books.count;
}

- (UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath
{
    UOrderTableViewCell *cell = [tableView dequeueReusableCellWithIdentifier:@"UOrderTableViewCell"];
    cell.index = indexPath.row;
    cell.data = _order;
    return cell;
}

#pragma mark -
#pragma mark UITableViewDelegate

- (void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath
{
    
}

- (UIView *)tableView:(UITableView *)tableView viewForHeaderInSection:(NSInteger)section
{
    UIView *headerView = [[UIView alloc] initWithFrame:CGRectMake(0, 0, Screen_Width, 44)];
    headerView.backgroundColor = [UIColor whiteColor];
    
    UIView *verLine = [UIView new];
    verLine.backgroundColor = [UIColor cm_purpleColor_82056B_1];
    [headerView addSubview:verLine];
    
    [verLine mas_makeConstraints:^(MASConstraintMaker *make) {
        make.top.equalTo(headerView.mas_top).offset(15);
        make.left.equalTo(headerView.mas_left).offset(10);
        make.size.mas_equalTo(CGSizeMake(3, 10));
    }];
    
    UILabel *lblDesc = [UILabel new];
    lblDesc.font = [UIFont systemFontOfSize:15.f];
    lblDesc.text = @"订单详情";
    lblDesc.textColor = [UIColor cm_blackColor_333333_1];
    [headerView addSubview:lblDesc];
    [lblDesc mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(verLine.mas_right).offset(10);
        make.centerY.equalTo(verLine.mas_centerY);
    }];
    
    UILabel *lblOrderId = [UILabel new];
    lblOrderId.font = [UIFont systemFontOfSize:12.f];
    lblOrderId.text = [NSString stringWithFormat:@"订单号: %@", _order.orderNumber];
    [headerView addSubview:lblOrderId];
    [lblOrderId mas_makeConstraints:^(MASConstraintMaker *make) {
        make.left.equalTo(verLine.mas_left);
        make.top.equalTo(verLine.mas_bottom).offset(10);
    }];
    
    UILabel *lblTime = [UILabel new];
    lblTime.font = [UIFont systemFontOfSize:12.f];
    lblTime.text = [NSString stringWithFormat:@"下单时间: %@", _order.date];
    [headerView addSubview:lblTime];
    [lblTime mas_makeConstraints:^(MASConstraintMaker *make) {
        make.centerY.equalTo(lblOrderId.mas_centerY);
        make.right.equalTo(headerView.mas_right).offset(-10);
    }];
    
    return headerView;
}

- (CGFloat)tableView:(UITableView *)tableView heightForHeaderInSection:(NSInteger)section
{
    return 54;
}

- (UIView *)tableView:(UITableView *)tableView viewForFooterInSection:(NSInteger)section
{
    UOrderFooterView *footerView = [UOrderFooterView loadFromNib];
    footerView.isDetailFooter = YES;
    footerView.clipsToBounds = YES;
    footerView.data = _order;
    return footerView;
}

- (CGFloat)tableView:(UITableView *)tableView heightForFooterInSection:(NSInteger)section
{
    return 40;
}

#pragma mark -
#pragma mark ZStarViewDelegate

- (void)starRatingView:(ZStarView *)view score:(float)score
{
    _score = score;
    self.navigationItem.rightBarButtonItem.enabled = YES;
}

#pragma mark -
#pragma mark action 

// 保存评论
- (void)saveEvalute
{
    
}

@end
