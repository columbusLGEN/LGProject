#import "EmptyView.h"

@interface EmptyView ()

@property (strong, nonatomic) IBOutlet UIImageView *imgEmtpy;
@property (strong, nonatomic) IBOutlet UILabel *lblDesc;
@property (strong, nonatomic) IBOutlet UILabel *lblSubDesc;

@end

@implementation EmptyView

- (void)awakeFromNib
{
    [super awakeFromNib];
    [self configEmptyView];
    
    [self updateEmptyView];
}

- (void)configEmptyView
{
    _lblDesc.textColor = [UIColor cm_graryColor_807F7F_1];
    _lblSubDesc.textColor = [UIColor cm_blackColor_666666_1];
    
    _lblDesc.font = [UIFont systemFontOfSize:16.f];
    _lblSubDesc.font = [UIFont systemFontOfSize:16.f];
}

- (void)updateEmptyView
{
    _imgEmtpy.image = _image;
    _lblDesc.text = _strDesc;
    
    _lblSubDesc.hidden = !_showSubDesc;
    _lblSubDesc.text = _strSubDesc;
}


@end
