static CGFloat itemW = 72;
static CGFloat itemH = 194;
static CGFloat insetsLR = 11;

#import "ECRBoomRecomment.h"

@interface ECRBoomRecomment ()
@property (strong,nonatomic) UIButton *title;// 重磅推荐
@property (strong,nonatomic) UIView *line;// 暂时用view 可能会换

@end


@implementation ECRBoomRecomment



- (instancetype)initWithFrame:(CGRect)frame{
    if (self = [super initWithFrame:frame]) {
        [self addSubview:self.title];
        [self addSubview:self.line];
        [self addSubview:self.collectionView];
        self.collectionView.backgroundColor = [UIColor whiteColor];
        self.line.backgroundColor = [UIColor cm_purpleColor_82056B_1];
        
        [self.title setTitle:@"重磅推荐" forState:UIControlStateNormal];
        [self.title setTitleColor:[UIColor cm_purpleColor_82056B_1] forState:UIControlStateNormal];
        self.title.titleLabel.font = [UIFont systemFontOfSize:16];
        [self.title mas_makeConstraints:^(MASConstraintMaker *make) {
            make.top.equalTo(self.mas_top);
            make.left.equalTo(self.mas_left).offset(10);
        }];
        [self.line mas_makeConstraints:^(MASConstraintMaker *make) {
            make.centerY.equalTo(self.title.mas_centerY);
            make.left.equalTo(self.title.mas_right).offset(8);
            make.right.equalTo(self.mas_right).offset(9);
            make.height.equalTo(@1);
        }];
        [self.collectionView mas_makeConstraints:^(MASConstraintMaker *make) {
            make.top.equalTo(self.title.mas_bottom).offset(5);
            make.left.equalTo(self.mas_left);
            make.right.equalTo(self.mas_right);
            make.bottom.equalTo(self.mas_bottom);
        }];
    }
    return self;
}

- (UIButton *)title{
    if (_title == nil) {
        _title = [[UIButton alloc] init];
    }
    return _title;
}
- (UIView *)line{
    if (_line == nil) {
        _line = [[UIView alloc] init];
    }
    return _line;
}
- (UICollectionView *)collectionView{
    if (_collectionView == nil) {
        _collectionView = [[UICollectionView alloc] initWithFrame:CGRectZero collectionViewLayout:self.brFlowLayout];
        [_collectionView setContentInset:UIEdgeInsetsMake(0, insetsLR, 0, insetsLR)];
    }
    return _collectionView;
}

- (UICollectionViewFlowLayout *)brFlowLayout{
    if (_brFlowLayout == nil) {
        _brFlowLayout = [[UICollectionViewFlowLayout alloc] init];
        _brFlowLayout.scrollDirection = UICollectionViewScrollDirectionHorizontal;
        _brFlowLayout.itemSize = CGSizeMake(itemW, itemH);
        _brFlowLayout.minimumLineSpacing = 26;// 横向,一行,控制每个之间的空间
        _brFlowLayout.minimumInteritemSpacing = 0;
    }
    return _brFlowLayout;
}

@end
