#import <Foundation/Foundation.h>

@class ZPickViewTool;

@protocol ZPickViewToolDelegate <NSObject>

- (void)ZPickView:(ZPickViewTool *)pickViewTool clickCancel:(id)handle;
- (void)ZPickView:(ZPickViewTool *)pickViewTool clickSureWithIndex:(NSInteger)index;

@end

@interface ZPickViewTool : NSObject

@property (weak, nonatomic) id<ZPickViewToolDelegate> delegate;
@property (nonatomic ,readonly) BOOL showing;

- (instancetype)initWithFrame:(CGRect)frame dataSource:(NSArray *)dataSource selected:(NSInteger)selected;

- (void)show;
- (void)hidden;

@end
