#import "UCRDetailStudentVC.h"

#import "UCRDetailStudentHeaderView.h"
#import "UCRDetailStudentTableViewCell.h"

#import "UFriendChatVC.h"

static CGFloat kHeaderViewHeight = 300.f;

@interface UCRDetailStudentVC ()<UITableViewDelegate, UITableViewDataSource>

@property (strong, nonatomic) UITableView *tableView;

@end

@implementation UCRDetailStudentVC

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    [self configView];
    [self getReadDetail];
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

- (void)getReadDetail
{
    [[ClassRequest sharedInstance] getReadingProgressWithStudentId:_student.userId completion:^(id object, ErrorModel *error) {
        if (error) {
            [self presentFailureTips:error.message];
        }
        else {
            NSArray *arr = [NSDictionary mj_objectArrayWithKeyValuesArray:object];
            _student.readHistory = arr.firstObject[@"readHistory"];
            _student.historyBook = arr.firstObject[@"historyBook"];
            [_tableView reloadData];
        }
    }];
}

#pragma mark -
#pragma mark UITableViewDataSource

- (NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    return _student.historyBook.count;
}

- (UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath
{
    UCRDetailStudentTableViewCell *cell = [tableView dequeueReusableCellWithIdentifier:NSStringFromClass([UCRDetailStudentTableViewCell class])];
    cell.data = _student.historyBook[indexPath.row];
    return cell;
}

#pragma mark -
#pragma mark UITableViewDelegate

- (void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath
{
    
}

#pragma mark -
#pragma mark action
    
- (void)updateSystemLanguage
{
    self.title = LOCALIZATION(@"阅读情况");
}
    
- (void)configView
    {
    [self configHeaderView];
    [self configTableView];
    [self configFooterView];
}

- (void)configHeaderView
{
    UCRDetailStudentHeaderView *headerView = [UCRDetailStudentHeaderView loadFromNibWithFrame:CGRectMake(0, 0, Screen_Width, kHeaderViewHeight)];
    headerView.data = _student;
    [self.view addSubview:headerView];
}

- (void)configTableView
{
    _tableView =[[UITableView alloc] initWithFrame:CGRectMake(0, kHeaderViewHeight - 64, Screen_Width, self.view.height - kHeaderViewHeight - cHeaderHeight_44) style:UITableViewStylePlain];
    _tableView.delegate = self;
    _tableView.dataSource = self;
    _tableView.showsVerticalScrollIndicator = NO;
    _tableView.rowHeight = UITableViewAutomaticDimension;
    _tableView.estimatedRowHeight = 100;
    
    UIView *footer = [UIView new];
    footer.backgroundColor = [UIColor whiteColor];
    _tableView.tableFooterView = footer;
    
    [self.view addSubview:_tableView];
    
    [_tableView registerNib:[UINib nibWithNibName:NSStringFromClass([UCRDetailStudentTableViewCell class]) bundle:nil] forCellReuseIdentifier:NSStringFromClass([UCRDetailStudentTableViewCell class])];
}

- (void)configFooterView
{
    UIView *footer = [[UIView alloc] initWithFrame:CGRectMake(0, Screen_Height - cHeaderHeight_44 - cHeaderHeight_64, Screen_Width, cHeaderHeight_44)];
    [self.view addSubview:footer];
    
    UIView *line = [[UIView alloc] initWithFrame:CGRectMake(0, 0, Screen_Width, .5f)];
    line.backgroundColor = [UIColor cm_lineColor_D9D7D7_1];
    [footer addSubview:line];
    
    UIButton *btnChat = [[UIButton alloc] initWithFrame:CGRectMake(0, 1, Screen_Width, cHeaderHeight_44 - 1)];
    [btnChat setTitle:LOCALIZATION(@"站内信") forState:UIControlStateNormal];
    [btnChat setTitleColor:[UIColor cm_blackColor_333333_1] forState:UIControlStateNormal];
    [btnChat addTarget:self action:@selector(sendMessage) forControlEvents:UIControlEventTouchUpInside];
    [footer addSubview:btnChat];
}

#pragma mark - 

- (void)sendMessage
{
    UFriendChatVC *chatVC = [UFriendChatVC loadFromStoryBoard:@"User"];
    chatVC.userId = _student.userId;
    [self.navigationController pushViewController:chatVC animated:YES];
}

@end
