#pragma mark 微信型录

// 点击微信登录
- (void)clickWeChatToLogin
{
    // 判断机器上是否有微信
    if ([WXApi isWXAppInstalled]) {
        [[WXLogin sharedInstance] getCode];
//        [self checkAccessTokenCanLogin];
    }
    else {
        [self presentFailureTips:@"没有微信"];
    }
}

- (void)checkAccessTokenCanLogin
{
    NSString *wechatAccessToken = [[NSUserDefaults standardUserDefaults] objectForKey:WX_ACCESS_TOKEN];
    NSString *wechatOpenId      = [[NSUserDefaults standardUserDefaults] objectForKey:WX_OPEN_ID];
    // 如果曾经登陆过微信, 检查access_token有效期
    if (wechatAccessToken && wechatOpenId) {
        [[WXLogin sharedInstance] checkAccessTokenComplete:^(id object, NSError *error) {
            if (error) {
                NSLog(@"checkAccessTokenError0 %@", error);
            }
            else {
                NSDictionary *dic = object;
                if ([dic[@"errcode"] isEqualToNumber:@(0)] || dic[@"errcode"] == nil) {
                    [self weChatGetUserInfo];
                }
                else if ([dic[@"errcode"] isEqualToNumber:@(40001)]) {
                    [self weChatRefreshAccessToken];
                }
                else {
                    NSLog(@"checkAccessTokenError1 %@", dic);
                }
            }
        }];
    }
    else {
        [[WXLogin sharedInstance] getCode];
    }
}

- (void)weChatRefreshAccessToken
{
    [[WXLogin sharedInstance] refreshAccessTokenComplete:^(id object, NSError *error) {
        if (error) {
            NSLog(@"refreshAccessTokenError0 %@", error);
        }
        else {
            NSDictionary *dic = object;
            if ([dic[@"errcode"] isEqualToNumber:@(0)] || dic[@"errcode"] == nil) {
                [self weChatGetUserInfo];
            }
            else {
                NSLog(@"refreshAccessTokenError1 %@", dic);
            }
        }
    }];
}

- (void)weChatGetUserInfo
{
    [[WXLogin sharedInstance] getUserInfoComplete:^(id object, NSError *error) {
        if (error) {
            NSLog(@"getUserInfoError0 %@", error);
        }
        else {
            NSDictionary *dic = object;
            if ([dic[@"errcode"] isEqualToNumber:@(0)] || dic[@"errcode"] == nil) {
                [self loginWithWeChatWithInfo:dic];
            }
            else {
                NSLog(@"getUserInfoError1 %@", dic);
            }
        }
    }];
}

- (void)loginWithWeChatWithInfo:(NSDictionary *)info
{
    NSString *unionid = info[@"unionid"];
    [[UserRequest sharedInstance] loginWithWeChatUnionid:unionid completion:^(id object, ErrorModel *error) {
        if (error) {

            if (error.code == 205) { // 未注册 提交注册申请
                RegisterWeChatUserVC *registerWX = [RegisterWeChatUserVC new];
                registerWX.userDic = info;
                [self.navigationController pushViewController:registerWX animated:YES];
            }
            else {
                [self presentFailureTips:error.message];
            }
        }
        else {
            UserModel *user = [UserModel mj_objectWithKeyValues:object[@"user"]];
            [UserRequest sharedInstance].user = user;
            [UserRequest sharedInstance].token = object[@"token"];
            [[UserRequest sharedInstance] saveCache];
            [self fk_postNotification:kNotificationUserLogin];
            [self.navigationController popViewControllerAnimated:YES];
        }
    }];
}

