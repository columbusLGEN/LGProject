#import "EmptyTableViewCell.h"

@interface EmptyTableViewCell ()

@property (strong, nonatomic) IBOutlet UIImageView *imgEmtpy;
@property (strong, nonatomic) IBOutlet UILabel *lblDesc;
@property (strong, nonatomic) IBOutlet UILabel *lblSubDesc;

@end

@implementation EmptyTableViewCell

- (void)awakeFromNib {
    [super awakeFromNib];
    // Initialization code
    [self updateEmptyCell];
}

- (void)setSelected:(BOOL)selected animated:(BOOL)animated {
    [super setSelected:selected animated:animated];

    // Configure the view for the selected state
}

- (void)updateEmptyCell
{
    _imgEmtpy.image = _image;
    _lblDesc.text = _strDesc;
    
    _lblSubDesc.hidden = !_showSubDesc;
    _lblSubDesc.text = _strSubDesc;
}

@end
