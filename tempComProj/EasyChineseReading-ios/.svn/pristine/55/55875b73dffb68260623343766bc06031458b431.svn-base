#import "UserSetAboutVC.h"

@interface UserSetAboutVC ()

@property (weak, nonatomic) IBOutlet UIImageView *imgLogo;
@property (weak, nonatomic) IBOutlet UILabel *lblAbout;
@property (weak, nonatomic) IBOutlet UILabel *lblBottom;

@end

@implementation UserSetAboutVC

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    [self configView];
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

- (void)updateSystemLanguage
{
    self.title = LOCALIZATION(@"关于");

    _lblAbout.text  = LOCALIZATION(@"是一个致力于打造全球汉语阅读社区的汉语互动阅读平台，是“十三五”期间北京语言大学出版社（以下简称北语社）推广汉语和中国文化“走出去”的代表性产品。产品集合了北语社精品读物与国内适合于外国人阅读的汉语书籍、报刊、文章等，以个性化的阅读功能为核心。用户可根据不同年龄、级别和兴趣定制一个寓教于乐的个人化汉语阅读中心。");
    _lblBottom.text = LOCALIZATION(@"北京语言大学出版社有限公司\n通信地址：北京市海淀区学院了15号  邮编：100083\n客服电话：+86-10-82303908  客服邮箱：service@blcup.com\n版权所有：北京语言大学出版社有限公司，All Right Reserved Copyright 2017\n京ICP证05080378 互联网出版许可证：新出网证（京）字163号");
}

#pragma mark - 配置界面

- (void)configView
{
    _imgLogo.layer.masksToBounds = YES;
    _imgLogo.layer.cornerRadius = 15.f;
    
    _imgLogo.layer.borderColor = [UIColor cm_lineColor_D9D7D7_1].CGColor;
    _imgLogo.layer.borderWidth = 0.5f;
    
    _lblAbout.backgroundColor  = [UIColor whiteColor];
    _lblBottom.backgroundColor = [UIColor whiteColor];
    
    _lblAbout.textColor = [UIColor cm_blackColor_666666_1];
    _lblBottom.textColor = [UIColor cm_blackColor_666666_1];
}

@end
